<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>Descubre la Moda que te Define</h1>
        <p>Encuentra las mejores prendas para cada ocasión. Calidad, estilo y comodidad en un solo lugar.</p>
        <a href="/productos" class="btn btn-accent btn-lg">Ver Productos</a>
    </div>
</section>

<!-- Categorías Destacadas -->
<section class="section">
    <div class="container">
        <h2 class="section-title">Compra por Categoría</h2>
        <p class="section-subtitle">Encuentra exactamente lo que buscas</p>
        
        <div class="categories-grid">
            <% categorias.forEach(categoria => { %>
                <a href="/productos?categoria=<%= categoria.nombre %>" class="category-card fade-in-on-scroll">
                    <div class="category-icon">
                        <% if (categoria.nombre === 'Camisetas') { %>
                            <i class="fas fa-tshirt"></i>
                        <% } else if (categoria.nombre === 'Pantalones') { %>
                            <i class="fas fa-user-alt"></i>
                        <% } else if (categoria.nombre === 'Vestidos') { %>
                            <i class="fas fa-female"></i>
                        <% } else if (categoria.nombre === 'Chaquetas') { %>
                            <i class="fas fa-coat-arms"></i>
                        <% } else if (categoria.nombre === 'Zapatos') { %>
                            <i class="fas fa-shoe-prints"></i>
                        <% } else if (categoria.nombre === 'Accesorios') { %>
                            <i class="fas fa-hat-cowboy"></i>
                        <% } else if (categoria.nombre === 'Deportiva') { %>
                            <i class="fas fa-running"></i>
                        <% } else { %>
                            <i class="fas fa-shopping-bag"></i>
                        <% } %>
                    </div>
                    <h3><%= categoria.nombre %></h3>
                    <p><%= categoria.descripcion %></p>
                </a>
            <% }) %>
        </div>
    </div>
</section>

<!-- Productos Destacados -->
<section class="section" style="background: var(--light-gray);">
    <div class="container">
        <h2 class="section-title">Productos Destacados</h2>
        <p class="section-subtitle">Lo más popular de nuestra colección</p>
        
        <div class="products-grid">
            <% productosDestacados.forEach(producto => { %>
                <div class="product-card fade-in-on-scroll">
                    <div class="product-image">
                        <% if (producto.imagen_principal) { %>
                            <img src="<%= producto.imagen_principal %>" alt="<%= producto.nombre %>" loading="lazy">
                        <% } else { %>
                            <i class="fas fa-image"></i>
                        <% } %>
                    </div>
                    
                    <div class="product-info">
                        <h3 class="product-title"><%= producto.nombre %></h3>
                        <p class="product-description"><%= producto.descripcion %></p>
                        
                        <div class="product-price">
                            <% if (producto.precio_oferta) { %>
                                <span style="text-decoration: line-through; color: var(--medium-gray); font-size: 1rem;">$<%= producto.precio.toFixed(2) %></span>
                                <span style="color: var(--accent-color);">$<%= producto.precio_oferta.toFixed(2) %></span>
                            <% } else { %>
                                $<%= producto.precio.toFixed(2) %>
                            <% } %>
                        </div>
                        
                        <div class="product-actions">
                            <a href="/producto/<%= producto.id %>" class="btn btn-outline btn-sm">Ver Detalles</a>
                            
                            <form class="add-to-cart-form" style="display: inline;">
                                <input type="hidden" name="producto_id" value="<%= producto.id %>">
                                <input type="hidden" name="cantidad" value="1">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-shopping-cart"></i> Agregar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <div style="text-align: center; margin-top: 3rem;">
            <a href="/productos" class="btn btn-primary btn-lg">Ver Todos los Productos</a>
        </div>
    </div>
</section>

